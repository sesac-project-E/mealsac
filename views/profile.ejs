<!DOCTYPE html>
<html lang="en">
  <%- include('./head') %>
  <body>
    <h1><%= data.user_name %>님 프로필 정보</h1>

    <form name="edit-profile">
      <input
        type="text"
        id="user_id"
        value="<%= data.user_id %>"
        readonly
      /><br />
      <input type="text" id="user_name" value="<%= data.user_name %>" /><br />
      <input type="password" id="password" value="<%= data.password %>" /><br />
      <input type="hidden" id="id" value="<%= data.id %>" /><br />
      <button type="button" onclick="destroy()">회원탈퇴</button>
    </form>

    <br />
    <a href="/">홈</a>

    <script>
      function destroy() {
        if (!confirm('회원탈퇴 하시겠습니까?')) return;

        axios({
          method: 'DELETE',
          url: '/destroy',
          data: {
            id: Number(document.querySelector('#id').value),
          },
        }).then((res) => {
          if (res.data.result) {
            alert('회원탈퇴 완료되었습니다');
            document.location.href = '/';
          }
        });
      }
    </script>
  </body>
</html>
